{
    "name": "Tasty extension",
    "manifest_version": 2,
    "version": "1.0",
    "description": "Tasty extension",
    "permissions": [
        "https://*/*"
        ],
    "icons" : {
        "16": "small_icon.png",
        "48": "mid_icon.png",
        "128": "big_icon.png"
    },
    "web_accessible_resources":[
        "images/*"
      ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["script.js"],
            "run_at": "document_end"
        }
    ]
}